<%= simple_form_for(@order, html: {class: 'form-horizontal' }) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :user_id, :class => "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.input_field :user_id, collection: @users, label_method: :full_name, :class => "form-control chosen-select chosen-select-width" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :client_id, :class => "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.input_field :client_id, collection: @clients, label_method: :client_name, :class => "form-control chosen-select", :tabindex => "2" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :software, :class => "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.input_field :software, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :semi, :class => "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.input_field :semi, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :production, :class => "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.input_field :production, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :ads, :class => "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.input_field :ads, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :other, :class => "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.input_field :other, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.text_area :description, :class => "form-control" %>
    </div>
  </div>
  <%= f.submit "Submit", :class => "btn btn-primary pull-right" %>
<% end %>
<script type="text/javascript">
    var config = {
      '.chosen-select'           : {},
    }
    for (var selector in config) {
      $(selector).chosen(config[selector]);
    }
  </script>